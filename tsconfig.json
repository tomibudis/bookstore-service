{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "baseUrl": ".",
   },
  "include": ["**/*.ts"],
   "exclude": ["node_modules", "drizzle.config.ts", "**/node_modules/**/*.d.ts", "typings"],
}